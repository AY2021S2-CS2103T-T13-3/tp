<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="pane-no-border" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <StackPane prefHeight="26.0" prefWidth="142.0" styleClass="stack-pane" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
        <TextField fx:id="commandInReviewMode" onAction="#handleCommandEnteredReview" prefHeight="26.0" prefWidth="142.0" promptText="Enter command here..." />
      <VBox.margin>
         <Insets left="10.0" right="20.0" top="10.0" />
      </VBox.margin>
    </StackPane>
    <StackPane fx:id="resultDisplayPlaceholderReviewMode" maxHeight="150" minHeight="55.0" prefHeight="55.0" prefWidth="662.0" styleClass="stack-pane" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" VBox.vgrow="NEVER">
      <VBox.margin>
         <Insets left="10.0" right="20.0" top="20.0" />
      </VBox.margin>
    </StackPane>
    <VBox alignment="CENTER">
        <padding>
            <Insets bottom="5" top="15" />
        </padding>
        <ProgressBar fx:id="progressBar" minHeight="20" prefHeight="20" prefWidth="300" />
        <Label fx:id="progressLabel" styleClass="label-bright" text="Label" />
    </VBox>
    <GridPane fx:id="reviewModePane" styleClass="pane-no-border" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <rowConstraints>
            <RowConstraints percentHeight="75.0" />
            <RowConstraints percentHeight="25.0" />
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints percentWidth="15.0" />
            <ColumnConstraints percentWidth="70.0" />
            <ColumnConstraints percentWidth="15.0" />
        </columnConstraints>

        <VBox styleClass="pane-no-border" GridPane.columnIndex="1" GridPane.rowIndex="0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <StackPane fx:id="flashcardPlaceholder" VBox.vgrow="ALWAYS" />
            <padding>
                <Insets bottom="5" />
            </padding>
        </VBox>
        <Button fx:id="exitButton" mnemonicParsing="false" text="Exit study mode" GridPane.columnIndex="2" GridPane.rowIndex="0" />
    </GridPane>
</VBox>
